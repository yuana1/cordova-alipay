<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android" id="com.yoopoon.cordova.plugin.alipay"
	version="5.3.0">
	<name>AlipayPlugin</name>
	<engines>
		<engine name="cordova" version=">=3.5.0" />
	</engines>

	<js-module src="www/alipay.js" name="alipay">
		<clobbers target="navigator.alipay" />
	</js-module>

	<!-- android -->
	<platform name="android">

		<source-file
			src="src/android/com/yoopoon/cordova/plugin/alipay/Alipay.java"
			target-dir="src/com/yoopoon/cordova/plugin/alipay" />
		<source-file
			src="src/android/com/yoopoon/cordova/plugin/alipay/Base64.java"
			target-dir="src/com/yoopoon/cordova/plugin/alipay" />
		<source-file
			src="src/android/com/yoopoon/cordova/plugin/alipay/Result.java"
			target-dir="src/com/yoopoon/cordova/plugin/alipay" />
		<source-file
			src="src/android/com/yoopoon/cordova/plugin/alipay/SignUtils.java"
			target-dir="src/com/yoopoon/cordova/plugin/alipay" />

		<source-file src="src/android/alipaysdk.jar" target-dir="libs" />
		<source-file src="src/android/alipaysecsdk.jar"
			target-dir="libs" />
		<source-file src="src/android/alipayutdid.jar" target-dir="libs" />

		<config-file target="res/xml/config.xml" parent="/*">
			<preference name="partner" value="" />
			<preference name="rsa_private"
				value="" />
			<preference name="" />
			<feature name="Alipay">
				<param name="android-package" value="com.yoopoon.cordova.plugin.alipay.Alipay" />
				<param name="onload" value="true" />
			</feature>
		</config-file>

		<config-file target="AndroidManifest.xml" parent="/manifest/application">
			<!-- alipay sdk begin -->
			<activity android:name="com.alipay.sdk.app.H5PayActivity"
				android:configChanges="orientation|keyboardHidden|navigation"
				android:exported="false" android:screenOrientation="behind"
				android:windowSoftInputMode="adjustResize|stateHidden">
			</activity>
			<!-- alipay sdk end -->
		</config-file>
	</platform>

	<platform name="ios">
		<config-file target="*-Info.plist" parent="CFBundleURLTypes">
		    <array>
				<dict>
					<key>CFBundleTypeRole</key>
					<string>Editor</string>
					<key>CFBundleURLIconFile</key>
					<string>icon-50@2x</string>
					<key>CFBundleURLName</key>
					<string>alipay</string>
					<key>CFBundleURLSchemes</key>
					<array>
						<string>2088311414553123</string>
					</array>
				</dict>
			</array>
		</config-file>
		<config-file target="*-Info.plist" parent="CFBundleDevelopmentRegion">
		    
				<string>Chian</string>
			
		</config-file>

		<!-- ios9不允许http访问，需要使用https访问，添加以下属性使http正常使用 -->
		<config-file target="*-Info.plist" parent="NSAppTransportSecurity">
		    	<dict>
		    	<key>NSAllowsArbitraryLoads</key>
				<true />
			</dict>
			
		</config-file>
		
		<!-- ios9 适配 query Schemes -->
		<config-file target="*-Info.plist" parent="LSApplicationQueriesSchemes">
			<array>
				<string>safepay</string>
				<string>alipay</string>
			</array>
		</config-file>
	    
	    
		<!-- build setting header search path $(SRCROOT)/X5 -->
		<header-file src="src/ios/CDVAlipay.h" />
		<source-file src="src/ios/CDVAlipay.m" />
		<header-file src="src/ios/AlipayOrder.h" />
		<source-file src="src/ios/AlipayOrder.m" />


		<!-- openssl -->
